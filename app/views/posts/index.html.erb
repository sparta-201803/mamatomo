<div class="row">
  <!--Retrieval-->
  <div class="col-md-12 retrieval">
    <div class="form-inline pull-right" style="margin-bottom:10px;">
      <form class="post_search" id="post_search" action="/posts" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="✓">
        <div class="form-group">
          <input placeholder="タイトルか本文を検索" class="form-control" type="search" name="q[title_or_body_cont]" id="q_title_or_body_cont">
          <input type="submit" name="commit" value="検索" class="btn btn-primary" data-disable-with="検索">
        </div>
      </form>
    </div>
  </div>
  <!--//Retrieval-->

  <!-- Brand and toggle get grouped for better mobile display -->
  <div class="navbar-header nav_logo">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <!-- ★★★★下記の#を後ほど正しいURLに変更 -->
    <%= link_to "", root_path, class: "navbar-brand" %>
  </div>
  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav navbar-right nav_bt">
      <!-- ★★★★下記の#を後ほど正しいURLに変更 -->
      <li>
        <a href="/posts/new">投稿する</a>
      </li>
    </ul>
  </div>
  <!-- /.navbar-collapse -->

  <!--nav-->
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav navbar-left nav_list">
      <!-- ★★★★下記の#を後ほど正しいURLに変更 -->
      <li>
        <a href="/posts/latest">最新</a>
      </li>
      <li>
        <a href="#">ランキング</a>
      </li>
      <li>
        <a href="#">妊娠・子育て</a>
      </li>
      <li>
        <a href="#">仕事・キャリア</a>
      </li>
      <li>
        <a href="#">お料理・レシピ</a>
      </li>

    </ul>
  </div>

  <!--left_side-->
  <div class="col-md-4 text-left">
    <div class="thumbnail">
      <img alt="著者イメージ" src="https://archive.fo/2BLPU/007b5291982bb1ef5b8b34ea9bb096a9a5028c12.jpeg" title="著者イメージ">
      <div class="caption text-center">
        <h3>sparta</h3>
        <p>hogehoge</p>
      </div>
    </div>
    <div class="list-group">
      <!-- 5件だけ記事を表示するように制御します -->
      <a class="list-group-item" href="/posts/7">てすと</a>
      <a class="list-group-item" href="/posts/6">なりなり</a>
      <a class="list-group-item" href="/posts/5">なるなる２</a>
      <a class="list-group-item" href="/posts/4">テスト</a>
      <a class="list-group-item" href="/posts/2">title</a>
    </div>
  </div>

  <div class="col-md-8">
    <% @posts.each do |post| %>
      <div class="article">
        <h2>タイトル：<%= post.title %></h2>
        <p>カテゴリ：<%= post.category %></p>
        <p>作成日：<%= post.created_at %></p>
        <p><%= truncate(post.body, length: 50) %></p>
        <p><%= link_to "続きを読む", post, class: "btn btn-default" %></p>
      </div>
    <% end %>

  </div>

</div>
